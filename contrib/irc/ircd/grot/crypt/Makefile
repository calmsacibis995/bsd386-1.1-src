#
# Change this to the path of your local ircd.conf file
#
IRCDCONF = /home/407/avalon/ircd.conf

all: mkpasswd
crypt: install

mkpasswd: mkpasswd.c
	cc -O mkpasswd.c -o mkpasswd

install:
	crypter ${IRCDCONF}
	@echo 'done.'

clean:
	/bin/rm -f mkpasswd
